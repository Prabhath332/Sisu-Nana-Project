                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">

                        @{
                            if (this.User.Identity.IsAuthenticated)
                            {
                                var role = this.User.Claims.ElementAt(3).Value;

                                if (role == "Admin")

                                {
                                    <li class="nav-item"><a class="nav-link text-dark" asp-action="Index" asp-controller="Home" ali>Home</a></li>
                                    <li class="nav-item"><a class="nav-link text-dark" asp-action="Index" asp-controller="Classes">Advertisements</a></li>
                                    <li class="nav-item"><a class="nav-link text-dark" asp-action="Teachers" asp-controller="Users">Teachers</a></li>
                                    <li class="nav-item"><a class="nav-link text-dark" asp-action="Index" asp-controller="Users">Students</a></li>
                                    <li class="nav-item"><a class="nav-link text-dark" asp-action="Index" asp-controller="Contacts">Masseges</a></li>

                                }
                                else if (role == "Student")
                                {
                                    <li class="nav-item"><a class="nav-link text-dark" asp-action="Index" asp-controller="Home" ali>Home</a></li>
                                    <li class="nav-item"><a class="nav-link text-dark" asp-action="Classes" asp-controller="Classes">Join Class</a></li>
                                    <li class="nav-item"><a class="nav-link text-dark" asp-action="Teachers" asp-controller="Users">Teachers</a></li>

                                }
                                else if (role == "Teacher")
                                {
                                    <li class="nav-item"><a class="nav-link text-dark" asp-action="Index" asp-controller="Home" ali>Home</a></li>
                                    <li class="nav-item"><a class="nav-link text-dark" asp-action="Index" asp-controller="Classes">Advertisements</a></li>
                                    <li class="nav-item"><a class="nav-link text-dark" asp-action="Classes" asp-controller="Classes">Join Class</a></li>
                                }

                            }
                            else
                            {
                                <li class="nav-item"><a class="nav-link text-dark" asp-action="Index" asp-controller="Home" ali>Home</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-action="CreateStudent" asp-controller="Users">Register Student</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-action="CreateTeacher" asp-controller="Users">Register Teacher</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-action="ViewLogIn" asp-controller="Home">LogIn</a></li>
                            }
                        }
                    </ul>
                </div>
            </div>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item"><a class="nav-link text-dark"><span class="glyphicon glyphicon-user"></span> <i class='fas fa-user' style='font-size:15px'></i>&nbsp;@this.User.Identity.Name</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-action="LogOut" asp-controller="Users"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
                </ul>

            </div>




        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ONEServices - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
